@import '_constants'


body
  margin 0
  text-rendering optimizeLegibility

#editor
#neatline
  position absolute
  box-sizing border-box

#neatline
  -webkit-user-select none
  -moz-user-select none

#editor
  background #fcfcfc
  width editorWidth
  overflow-y scroll
  overflow-x hidden
