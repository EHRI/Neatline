@import 'var'


#editor

  form.record

    span.id
      font-weight bold

    textarea.code
      height 120px
      font-size 11px
      font-family Consolas
      font-weight bold

    #record-text

      textarea
        height 100px
        &[name="body"]
          height 300px

    #record-spatial

      label.radio
      label.checkbox
        margin-bottom 10px
        cursor pointer

      label.radio
        margin-left 0.5em

      div.control-group.indent
        margin 0 2em

        label
        .inline-inputs
          font-weight 300

        &.regular-polygon

          .inline-inputs
            margin-bottom 10px

          input[type="text"]
            display inline
            margin 0 4px 0 0
            width 30px

      a[name="clear"]
        margin 0.5em 0

    #record-style
      margin-bottom 1.4em

      label
        display inline-block

      a.use-current
        font-size 12px
        cursor pointer

      button[name="focus-map"]
        margin 5px 0 10px
