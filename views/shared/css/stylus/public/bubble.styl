.bubble
  overflow hidden
  position fixed
  z-index 999
  border 1px solid rgba(0, 0, 0, 0.2)
  box-shadow 0 3px 8px rgba(0, 0, 0, 0.3)
  background #fcfcfc
  padding 5px 10px
  max-width 400px
  opacity 0.9

  &.frozen
    opacity 1

  .title
    font-weight bold

  .body
    white-space pre-wrap
