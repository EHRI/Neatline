body
  margin 0
  text-rendering optimizeLegibility

#editor
#drag-handle
#neatline
  position absolute
  box-sizing border-box

#neatline
  -webkit-user-select none
  -moz-user-select none

#drag-handle
  z-index 999
  width 10px
  cursor col-resize

  &:hover
    border-left 2px dashed orange

svg
  display none
  z-index 1000

  line
    shape-rendering crispEdges
    stroke gray
    stroke-width 10
    opacity 0.2

    &.highlighted
      stroke orange

.dragging

  #neatline
    z-index -1

  #drag-handle
    border-style-left solid

  svg
    display block
