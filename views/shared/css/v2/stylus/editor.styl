@import 'colors'
@import 'mixins'

body
  margin 0
  text-rendering optimizeLegibility

#editor
#drag-handle
#neatline
  position absolute
  box-sizing border-box

#neatline
  -webkit-user-select none
  -moz-user-select none

#editor
  background #f9f9f9
  width 380px
  overflow-y scroll
  overflow-x hidden

  ul.records
    margin 0

    li
      list-style none
      cursor pointer
      font-size 14px
      font-weight 300
      padding 0.2em 1em
      border-bottom 1px solid #f0f0f0

      &:hover
        background #3f3f3f
        color white


  // TODO|dev
  // --------

  form
    margin 1.6em

    ul.nav
      margin-top 20px

      li
        margin-right 8px

      a
        font-size 18px
        font-weight 300
        padding 0.7em 0.7em

    h3.head
      font-size 3em
      font-weight 300

    textarea
    input
      width 95%

      &[name="title"]
        height 100px

      &[name="body"]
        height 300px

    .form-actions
      background transparent
      padding-left 0

      button
        margin-right 5px
