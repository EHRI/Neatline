@import 'colors'
@import 'mixins'

body
  margin 0
  text-rendering optimizeLegibility

#editor
#drag-handle
#neatline
  position absolute
  box-sizing border-box

#neatline
  -webkit-user-select none
  -moz-user-select none

#editor
  background #f9f9f9
  width 380px
  overflow-y scroll
  overflow-x hidden

  ul.records
    margin 0

    li
      list-style none
      cursor pointer
      font-size 12px
      padding 0 1em
      border-bottom 1px solid #f0f0f0

      &:hover
        background #3f3f3f
        color white
