purple-gradient()
  background-color hsl(275, 7%, 32%) !important;
  background-repeat repeat-x
  background-image -khtml-gradient(linear, left top, left bottom, from(#6c6372), to(#524b57));
  background-image -moz-linear-gradient(top, #6c6372, #524b57)
  background-image -ms-linear-gradient(top, #6c6372, #524b57)
  background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%, #6c6372), color-stop(100%, #524b57))
  background-image -webkit-linear-gradient(top, #6c6372, #524b57)
  background-image -o-linear-gradient(top, #6c6372, #524b57)
  background-image linear-gradient(#6c6372, #524b57)
  border-color #524b57 #524b57 hsl(275, 7%, 29.5%)
  color #fff !important
  text-shadow 0 -1px 0 rgba(0, 0, 0, 0.16)
  -webkit-font-smoothing antialiased


gray-gradient()
  background-color hsl(0, 0%, 91%) !important
  background-repeat repeat-x
  background-image -khtml-gradient(linear, left top, left bottom, from(#f7f7f7), to(#e8e8e8))
  background-image -moz-linear-gradient(top, #f7f7f7, #e8e8e8)
  background-image -ms-linear-gradient(top, #f7f7f7, #e8e8e8)
  background-image -webkit-gradient(linear, left top, left bottom, color-stop(0%, #f7f7f7), color-stop(100%, #e8e8e8))
  background-image -webkit-linear-gradient(top, #f7f7f7, #e8e8e8)
  background-image -o-linear-gradient(top, #f7f7f7, #e8e8e8)
  background-image linear-gradient(#f7f7f7, #e8e8e8)
  border-color #e8e8e8 #e8e8e8 hsl(0, 0%, 89.5%)
  color #333 !important
  text-shadow 0 1px 1px rgba(255, 255, 255, 0.09)
  -webkit-font-smoothing antialiased
